{
  "restore_on_startup": "launchpad",
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "ollama",
      "model": "gemini-3-pro-preview:latest"
    },
    "model_parameters": []
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "default_width": 250.0,
    "indent_size": 10.0,
    "dock": "left",
    "starts_open": false
  },
  "context_servers": {
    "serena-context-server": {
      "enabled": true,
      "settings": {
        "python_executable": null
      }
    },
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": ""
      }
    }
  },
  "base_keymap": "VSCode",
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "ssh_connections": [
    {
      "host": "35.206.235.138",
      "username": "kojimagai",
      "projects": [
        {
          "paths": ["/var/www"]
        }
      ]
    }
  ],
  "format_on_save": "off",
  "show_edit_predictions": true,
  "auto_update": true,
  "theme": "Github Dark Dimmed",
  "vim_mode": true,
  "ui_font_size": 14.0,
  "buffer_font_size": 13.0,
  "terminal": {
    "default_height": 400.0,
    "font_size": 13.0
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "show_whitespaces":"all",
  "whitespace_map": {
    "space": " ",
    "tab": "â†’"
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
}
