// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  /** フォーマットを手動実行にする */
  "base_keymap": "VSCode",
  "icon_theme": {
    "mode": "dark",
    "light": "Material Icon Theme",
    "dark": "Material Icon Theme"
  },
  "ssh_connections": [
    {
      "host": "35.206.235.138",
      "username": "kojimagai",
      "projects": [
        {
          "paths": ["/var/www"]
        }
      ]
    }
  ],
  /** フォントの設定 */
  "format_on_save": "off",
  /** 自動更新を有効にする */
  "show_inline_completions": true,
  "auto_update": true,
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "One Dark"
  },
  /** vim mode を有効にする */
  "vim_mode": true,
  /** font-size */
  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,
  /** font family を JetBrainsMono Nerd Font にする */
  "ui_font_family": "PlemolJP Console NF",
  "terminal_font_family": "PlemolJP Console NF",
  "buffer_font_family": "PlemolJP Console NF",
  //"buffer_font_family": "JetBrainsMono Nerd Font",
  /** 非アクティブなパネルの透明度 */
  "inactive_opacity": 0.7,
  /** カーソルがある行からの相対的な行数を表示する */
  "relative_line_numbers": true,
  /** ターミナルの設定 */
  "terminal": {
    /** ツールバーのパンくずを非表示にする */
    "toolbar": {
      "breadcrumbs": false
    }
  },
  /** インレイヒントを表示する */
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "typos": {
      "initialization_options": {
        "config": "/Users/kaikojima/.config/zed/.typos.toml",
        "path": "/opt/homebrew/bin/typos-lsp",
        "diagnosticSeverity": "Error",
        "trace.server": "off"
      }
    }
  }
}
