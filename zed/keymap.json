[
  /** insert mode */
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // insert mode を抜ける
      "j j": "vim::NormalBefore",
      // insert mode の状態のまま1文字進む
      "ctrl-l": ["workspace::SendKeystrokes", "escape l a"],
      // insert mode の状態のまま1文字戻る
      "ctrl-h": ["workspace::SendKeystrokes", "escape i"]
    }
  },
  /** normal mode */
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      /** 移動 */
      "ctrl-j": ["workspace::SendKeystrokes", "2 0 j"],
      "ctrl-k": ["workspace::SendKeystrokes", "2 0 k"],
      "space h": ["workspace::SendKeystrokes", "^"],
      "space l": "editor::MoveToEndOfLine",
      "space c f": "editor::Format",
      "ctrl-w h": ["workspace::SendKeystrokes", "ctrl-w h escape"],
      "ctrl-w l": ["workspace::SendKeystrokes", "ctrl-w l escape"],

      /** ヤンク */
      "shift-y": ["workspace::SendKeystrokes", "y $"],

      /** LSP */
      "space e": "editor::GoToDiagnostic",
      "g h": "editor::GoToDefinition",
      "g o": "pane::GoBack",

      /** 検索 */
      "space f": ["workspace::SendKeystrokes", "cmd-p"],
      "space r": ["workspace::SendKeystrokes", "cmd-shift-f"],
      "space s": ["workspace::SendKeystrokes", "cmd-shift-o"], // cmd-r でアウトラインパネルを閉じる

      /** プロジェクトパネル */
      "space p": ["workspace::SendKeystrokes", "cmd-b escape"],

      /** タブ移動 */
      "t n": "pane::ActivateNextItem",
      "t p": "pane::ActivatePreviousItem",

      /** インレイヒント */
      "ctrl-i": "editor::ToggleInlayHints",

      /** フォールド */
      "ctrl-]": "editor::ToggleFold"
    }
  },
  /** visual mode */
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      /** ペースト時にレジスタを汚さない */
      "p": ["workspace::SendKeystrokes", "\" _ d shift-p"]
    }
  },
  /** 一致検索 */
  {
    "context": "Editor && vim_mode != insert",
    "bindings": {
      /** 移動 */
      "ctrl-p": "search::SelectAllMatches",
      "ctrl-n": "search::SelectNextMatch"
    }
  },
  /** プロジェクトパネル */
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      /** フォーカス */
      "ctrl-l": "editor::ToggleFocus",

      /** ディレクトリ・ファイル操作 */
      "f": "project_panel::NewDirectory",
      "a": "project_panel::NewFile",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete"
    }
  },
  /** ターミナル */
  {
    "context": "Terminal",
    "bindings": {
      /** フォーカス */
      "ctrl-w k": "editor::ToggleFocus",

      /** タブ */
      "cmd-t": "workspace::NewTerminal",

      /** 開閉 */
      "cmd-c": "terminal_panel::Toggle"
    }
  }
]
