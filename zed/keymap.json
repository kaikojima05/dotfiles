[
  /** insert mode */
  {
    "context": "vim_mode == insert",
    "bindings": {
      // insert mode を抜ける
      "j j": "vim::NormalBefore",
      // insert mode のまま1文字進む
      "ctrl-l": ["workspace::SendKeystrokes", "right"],
      // insert mode のまま1文字戻る
      "ctrl-h": ["workspace::SendKeystrokes", "left"],

      // グローバルの設定を上書きする
      "space h": null,
      "space l": null,
      "space c f": null,
      "space r": null,
      "space b l": null,
      "space f": null,
      "space e": null,
      "ctrl-t": null,
    },
  },
  /** normal mode */
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      /** 移動 */
      "shift-j": ["workspace::SendKeystrokes", "2 0 j"],
      "shift-k": ["workspace::SendKeystrokes", "2 0 k"],
      "space h": ["workspace::SendKeystrokes", "^"],
      "space l": "editor::MoveToEndOfLine",
      "ctrl-w h": ["workspace::SendKeystrokes", "ctrl-w h escape"],
      "ctrl-w l": ["workspace::SendKeystrokes", "ctrl-w l escape"],

      /** ヤンク */
      "shift-y": ["workspace::SendKeystrokes", "y $"],

      /** LSP */
      "ctrl-e": "editor::GoToDiagnostic",

      /** タブ移動 */
      "t n": "pane::ActivateNextItem",
      "t p": "pane::ActivatePreviousItem",

      /** インレイヒント */
      "ctrl-i": "editor::ToggleInlayHints",

      /** フォールド */
      "ctrl-]": "editor::ToggleFold",

      /** フォーマット */
      "space c f": "editor::Format",

      /** toggl */
      "space r": "workspace::ToggleRightDock",

      /** 変更箇所へのジャンプ */
      "ctrl-h": "editor::GoToNextChange",
      "ctrl-l": "editor::GoToPreviousChange",
    },
  },
  /** visual mode */
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      /** ペースト時にレジスタを汚さない */
      "p": ["workspace::SendKeystrokes", "\" _ d shift-p"],
    },
  },
  /** 一致検索 */
  {
    "context": "Editor && vim_mode != insert && !menu",
    "bindings": {
      /** 移動 */
      "ctrl-j": ["workspace::SendKeystrokes", "down"],
      "ctrl-k": ["workspace::SendKeystrokes", "up"],
    },
  },
  /** 一致検索 */
  {
    "context": "VimControl",
    "bindings": {
      /** 移動 */
      "shift-n": "search::SelectPreviousMatch",
      "n": "search::SelectNextMatch",
    },
  },
  /** プロジェクトパネル */
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      /** ディレクトリ・ファイル操作 */
      "f": "project_panel::NewDirectory",
      "a": "project_panel::NewFile",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete",
      "l": ["workspace::SendKeystrokes", "Enter"],
    },
  },
  /** ターミナル */
  {
    "context": "Terminal",
    "bindings": {
      /** フォーカス */
      "ctrl-w k": "editor::ToggleFocus",

      /** 開閉 */
      "ctrl-t": "terminal_panel::Toggle",
    },
  },
  /** dock */
  {
    "context": "Dock && !Terminal",
    "bindings": {
      /** toggl dock */
      "space e": "workspace::ToggleLeftDock",
    }
  },
  {
    "context": "Dock && vim_mode == normal",
    "bindings": {
      /** toggl dock */
      "space r": "workspace::ToggleRightDock"
    }
  },
  /** -- ここまで --*/
  {
    "context": "Workspace",
    "bindings": {
      /** tab switcher */
      "space b l": "tab_switcher::Toggle",
      /** file finder */
      "space f": "file_finder::Toggle",
      /** dock */
      "space e": "workspace::ToggleLeftDock",
      "ctrl-t": "terminal_panel::Toggle",
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "ctrl-j": ["workspace::SendKeystrokes", "down"],
      "ctrl-k": ["workspace::SendKeystrokes", "up"],
    }
  },
]
